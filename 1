- name: Crear instancia 
  hosts: localhost
  tasks: 
  - name: Crear VM
    os_server:
      auth:
        auth_url: "{{ AuthUrl }}"
        username: "{{ AuthUserName }}"
        password: "{{ AuthPassword }}"
        project_name: "{{ TenantName }}"
      state: present
      validate_certs: False
      name: "mar_cop"
      key_name:
      image: "{{ ImageName }}"
      timeout: 200
      flavor:   "{{ FlavorName }}"
      network: "{{ NetworkName }}"
      auto_ip: yes
